{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "commonjs",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "@assets/*": ["./assets/*"],
      "@src/*": ["./src/*"],
      "@main/*": ["./src/main/*"],
      "@app/*": ["./src/renderer/pages/app/*"],
      "@matchlive/*": ["./src/renderer/pages/matchlive/*"],
      "@updatechecker/*": ["./src/renderer/pages/updatechecker/*"]
    }
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
